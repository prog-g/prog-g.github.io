{
  "name": "prog-g.github.io",
  "version": "1.0.0",
  "private": true,
  "devDependencies": {
    "husky": "^1.0.0-rc.14",
    "lint-staged": "^7.2.2",
    "prettier": "^1.14.2",
    "svgo": "^1.0.5",
    "textlint": "^11.0.0",
    "textlint-rule-preset-ja-technical-writing": "^3.1.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": "textlint",
    "*.{md,scss}": [
      "prettier --write",
      "git add"
    ],
    "*.svg": [
      "svgo",
      "git add"
    ]
  }
}
